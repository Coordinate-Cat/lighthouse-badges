{
  "name": "lighthouse-badges",
  "version": "0.2.25",
  "description": "A lighthouse badge generator",
  "main": "bin/main.js",
  "bin": {
    "lighthouse-badges": "bin/main.js"
  },
  "scripts": {
    "test": "jest",
    "system-test:run": "npm run system-test:clean && npm run system-test:reinstall && lighthouse-badges --save-report --single-badge --urls 'https://emanuelemazzotta.com' && npm run system-test:verify && npm run system-test:clean",
    "system-test:clean": "rm -f *.svg *.html",
    "system-test:reinstall": "npm uninstall -g . && npm i -g .",
    "system-test:verify": "grep -q '<svg xmlns' 'lighthouse.svg' && grep -q '<title>Lighthouse Report</title>' 'emanuelemazzotta_com.html'",
    "lint:fix": "eslint --fix .",
    "lint": "eslint .",
    "prepush": "yarn lint && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emazzotta/lighthouse-badges.git"
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "gh-badges": "^1.3.0",
    "lighthouse": "^3.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.4.2",
    "babel-preset-env": "^1.6.1",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.5.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx,mjs}",
      "bin/**/*.{js,jsx,mjs}"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "author": "Emanuele Mazzotta",
  "license": "MIT"
}
