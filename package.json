{
  "name": "lighthouse-badges",
  "version": "1.0.9",
  "description": "ðŸš¦Generate gh-badges (shields.io) based on Lighthouse performance.",
  "main": "src/index.js",
  "bin": {
    "lighthouse-badges": "src/index.js"
  },
  "scripts": {
    "clean": "rm -f *.svg *.html",
    "docker:build": "docker build --build-arg VCS_REF=`git rev-parse --short HEAD` --build-arg BUILD_DATE=`date -u +\"%Y-%m-%dT%H:%M:%SZ\"` --build-arg VERSION=latest -t emazzotta/lighthouse-badges .",
    "docker:push": "docker push emazzotta/lighthouse-badges",
    "docker:system-test:run": "docker run emazzotta/lighthouse-badges /bin/sh -c \"lighthouse-badges --single-badge --save-report --urls https://google.com && EXEC_PATH=/home/chrome/reports npm run system-test:verify --prefix /home/lighthouse\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "reinstall": "npm uninstall -g . && npm i -g .",
    "run:example:global": "lighthouse-badges -rsu https://google.com",
    "run:example:local": "/usr/local/bin/node src/index.js -rsu https://google.com",
    "system-test:full-run": "npm-run-all clean reinstall run:example:global system-test:verify clean",
    "system-test:light-run": "npm-run-all clean run:example:local system-test:verify clean",
    "system-test:verify": "[ -z ${EXEC_PATH} ] && EXEC_PATH=$PWD ; grep -q '<svg xmlns' ${EXEC_PATH}/lighthouse.svg && grep -q '<title>Lighthouse Report</title>' ${EXEC_PATH}/google_com.html",
    "test": "jest",
    "test:related": "jest --findRelatedTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run test:related",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emazzotta/lighthouse-badges.git"
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "clui": "^0.3.6",
    "gh-badges": "^2.1.0",
    "lighthouse": "^4.0.0-beta",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "author": "Emanuele Mazzotta",
  "license": "MIT"
}
